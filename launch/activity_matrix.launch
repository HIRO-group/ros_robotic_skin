<?xml version="1.0" ?>
<!-- This launch file will run the other nodes for activity-->
<!-- matrix generation. Can be run from panda simulation/real life -->
<!-- and sawyer simulation. -->
<launch>
    <arg name="is_sim" default="true" />
    <arg name="filename" default="panda_positions.txt" />

    <arg name="robot_type" default="panda" />

    <node pkg="ros_robotic_skin" name="activity_matrix" type="activity_matrix.py" output="screen"/>
    <node pkg="ros_robotic_skin" name="imu_listener" type="imu_listener.py" output="screen"/>
    <node pkg="ros_robotic_skin" name="activity_matrix_controller" type="activity_matrix_controller.py" args="$(arg is_sim) $(arg filename) $(arg robot_type)" output="screen"/>


</launch>