<?xml version="1.0" ?>
<!-- launch file for control of the real -->
<!-- franka panda robot arm. -->
<launch>
  <!-- robot ip of the panda must be specified -->
  <arg name="robot_ip" />
  <arg name="load_gripper" default="true" />

  <!-- side note - we need to modify the original franka control to also have the joint trajectory controller -->
  <include file="$(find franka_control)/launch/franka_control.launch" >
    <arg name="robot_ip" value="$(arg robot_ip)" />
    <arg name="load_gripper" value="$(arg load_gripper)" />
  </include>

  <arg name="constants_file_yaml" default="$(find ros_robotic_skin)/config/params.yaml"/>
  <rosparam command="load" file="$(arg constants_file_yaml)"/>
  <rosparam param="is_sim">false</rosparam>

  <rosparam command="load" file="$(find ros_robotic_skin)/config/panda_joint_controllers.yaml"/>
  <node name="panda_controller_spawner" pkg="controller_manager" type="spawner" respawn="false" output="screen" args="panda_joint_position_controller"/>

  <node name="controller_spawn_stopped" pkg="controller_manager" type="spawner" respawn="false" output="screen" args="--stopped panda_joint_velocity_controller" />
  
  <node pkg="ros_robotic_skin" name="fake_accelerometer_publisher0" type="fake_accelerometer_publisher.py" output="screen" args="0"/>
  <!-- <node pkg="ros_robotic_skin" name="fake_accelerometer_publisher1" type="fake_accelerometer_publisher.py" output="screen" args="1"/>
  <node pkg="ros_robotic_skin" name="fake_accelerometer_publisher2" type="fake_accelerometer_publisher.py" output="screen" args="2"/>
  <node pkg="ros_robotic_skin" name="fake_accelerometer_publisher3" type="fake_accelerometer_publisher.py" output="screen" args="3"/>
  <node pkg="ros_robotic_skin" name="fake_accelerometer_publisher4" type="fake_accelerometer_publisher.py" output="screen" args="4"/>
  <node pkg="ros_robotic_skin" name="fake_accelerometer_publisher5" type="fake_accelerometer_publisher.py" output="screen" args="5"/>
  <node pkg="ros_robotic_skin" name="fake_accelerometer_publisher6" type="fake_accelerometer_publisher.py" output="screen" args="6"/> -->

  <node name = "PlotJuggler" pkg = "plotjuggler" type = "PlotJuggler" args="--layout $(find ros_robotic_skin)/config/verify_joint_velocities_in_real.xml"/>
</launch>